{
  "version": 2,
  "name": "matc-admin-panel",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://matc-backend.onrender.com/api",
    "NODE_ENV": "production"
  }
}